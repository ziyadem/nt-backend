</span>      <span class="o">&lt;</span><span class="nx">meta</span> <span class="nx">property</span><span class="o">=</span><span class="dl">"</span><span class="s2">og:url</span><span class="dl">"</span> <span class="nx">content</span><span class="o">=</span><span class="p">{</span><span class="nx">url</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="o">&lt;</span><span class="nx">meta</span> <span class="nx">property</span><span class="o">=</span><span class="dl">"</span><span class="s2">og:type</span><span class="dl">"</span> <span class="nx">content</span><span class="o">=</span><span class="p">{</span><span class="nx">type</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="o">&lt;</span><span class="nx">meta</span> <span class="nx">property</span><span class="o">=</span><span class="dl">"</span><span class="s2">og:image</span><span class="dl">"</span> <span class="nx">content</span><span class="o">=</span><span class="p">{</span><span class="nx">image</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>
      <span class="o">&lt;</span><span class="nx">link</span> <span class="nx">rel</span><span class="o">=</span><span class="dl">"</span><span class="s2">shortcut icon</span><span class="dl">"</span> <span class="nx">href</span><span class="o">=</span><span class="p">{</span><span class="nx">faviconIco</span><span class="p">.</span><span class="nx">src</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="o">&lt;</span><span class="nx">link</span> <span class="nx">rel</span><span class="o">=</span><span class="dl">"</span><span class="s2">apple-touch-icon</span><span class="dl">"</span> <span class="nx">sizes</span><span class="o">=</span><span class="dl">"</span><span class="s2">180x180</span><span class="dl">"</span> <span class="nx">href</span><span class="o">=</span><span class="p">{</span><span class="nx">appleTouchIcon</span><span class="p">.</span><span class="nx">src</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="o">&lt;</span><span class="nx">link</span> <span class="nx">rel</span><span class="o">=</span><span class="dl">"</span><span class="s2">icon</span><span class="dl">"</span> <span class="nx">type</span><span class="o">=</span><span class="dl">"</span><span class="s2">image/png</span><span class="dl">"</span> <span class="nx">sizes</span><span class="o">=</span><span class="dl">"</span><span class="s2">32x32</span><span class="dl">"</span> <span class="nx">href</span><span class="o">=</span><span class="p">{</span><span class="nx">favicon32</span><span class="p">.</span><span class="nx">src</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="o">&lt;</span><span class="nx">link</span> <span class="nx">rel</span><span class="o">=</span><span class="dl">"</span><span class="s2">icon</span><span class="dl">"</span> <span class="nx">type</span><span class="o">=</span><span class="dl">"</span><span class="s2">image/png</span><span class="dl">"</span> <span class="nx">sizes</span><span class="o">=</span><span class="dl">"</span><span class="s2">16x16</span><span class="dl">"</span> <span class="nx">href</span><span class="o">=</span><span class="p">{</span><span class="nx">favicon16</span><span class="p">.</span><span class="nx">src</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>      <span class="p">{</span><span class="cm">/* &lt;link rel="mask-icon" href="" color="#5bbad5" /&gt; Add mask icon */</span><span class="p">}</span>
      <span class="o">&lt;</span><span class="nx">meta</span> <span class="nx">name</span><span class="o">=</span><span class="dl">"</span><span class="s2">msapplication-TileColor</span><span class="dl">"</span> <span class="nx">content</span><span class="o">=</span><span class="dl">"</span><span class="s2">#da532c</span><span class="dl">"</span> <span class="o">/&gt;</span>
      <span class="o">&lt;</span><span class="nx">meta</span> <span class="nx">name</span><span class="o">=</span><span class="dl">"</span><span class="s2">theme-color</span><span class="dl">"</span> <span class="nx">content</span><span class="o">=</span><span class="dl">"</span><span class="s2">#ffffff</span><span class="dl">"</span> <span class="o">/&gt;</span>

      <span class="o">&lt;</span><span class="nx">link</span> <span class="nx">rel</span><span class="o">=</span><span class="dl">"</span><span class="s2">canonical</span><span class="dl">"</span> <span class="nx">href</span><span class="o">=</span><span class="p">{</span><span class="nx">url</span><span class="p">}</span> <span class="sr">/</span><span class="err">&gt;
</span>    <span class="o">&lt;</span><span class="sr">/Head</span><span class="err">&gt;
</span>  <span class="p">);</span>
<span class="p">};</span>
</code></pre>
